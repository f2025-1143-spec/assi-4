#include <iostream>
using namespace std;
const int ROWS = 10;
const int COLS = 10;
void displaySeats(int seats[ROWS][COLS]) {
    cout << " BUS SEAT MAP (0 = empty, 1 = reserved) ";
    for (int i = 0; i < ROWS; i++) {
        cout << "Row " << i + 1 << ": ";
        for (int j = 0; j < COLS; j++) {
            cout << seats[i][j] << " ";
        }
        cout << endl;
    }
    cout << endl;
}

void reserveSeat(int seats[ROWS][COLS]) {
    int r, c;
    cout << "Enter row (1-10): ";
    cin >> r;
    cout << "Enter column (1-10): ";
    cin >> c;


    if (r < 0 || r >= ROWS || c < 0 || c >= COLS) {
        cout << "Invalid seat position!\n";
        return;
    }

    if (seats[r][c] == 1) {
        cout << "Seat already reserved!\n";
    } else {
        seats[r][c] = 1;
        cout << "Seat reserved successfully.\n";
    }
}

void cancelSeat(int seats[ROWS][COLS]) {
    int r, c;
    cout << "Enter row (1-10): ";
    cin >> r;
    cout << "Enter column (1-10): ";
    cin >> c;
    if (r < 0 || r >= ROWS || c < 0 || c >= COLS) {
        cout << "Invalid seat position!\n";
        return;
    }

    if (seats[r][c] == 0) {
        cout << "Seat already empty!\n";
    } else {
        seats[r][c] = 0;
        cout << "Reservation cancelled.\n";
    }
}

void countRows(int seats[ROWS][COLS]) {
    int full = 0, empty = 0, partial = 0;

    for (int i = 0; i < ROWS; i++) {
        int reservedCount = 0;

        for (int j = 0; j < COLS; j++) {
            if (seats[i][j] == 1)
                reservedCount++;
        }

        if (reservedCount == COLS) full++;
        else if (reservedCount == 0) empty++;
        else partial++;
    }

    cout << "ROW STATUS REPORT ";
    cout << "Fully occupied rows:   " << full << endl;
    cout << "Partially occupied rows:" << partial << endl;
    cout << "Empty rows:            " << empty << endl;
  
}

// Menu function
void menu() {
    cout << "BUS RESERVATION MENU ";
    cout << "1. Display seats\n";
    cout << "2. Reserve a seat\n";
    cout << "3. Cancel a seat\n";
    cout << "4. Count row occupancy\n";
    cout << "5. Exit";
    cout << "Choose an option: ";
}

int main() {
    int seats[ROWS][COLS] = {0};  
    int choice;

    do {
        menu();
        cin >> choice;

        switch (choice) {
            case 1: displaySeats(seats); break;
            case 2: reserveSeat(seats); break;
            case 3: cancelSeat(seats); break;
            case 4: countRows(seats); break;
            case 5: cout << "Exiting program "; break;
            default: cout << "Invalid option! Try again.\n";
        }
 } while (choice != 5);
  return 0;
}
