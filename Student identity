#include <iostream>
#include <vector>
#include <string>

using namespace std;

struct Student {
    string name;
    int id;
};

struct Course {
    string courseName;
    string courseCode;
    vector<Student> enrolledStudents;
};

int main() {
    int numCourses;
    cout << "Enter number of courses: ";
    cin >> numCourses;

    vector<Course> courses(numCourses);

    for (int i = 0; i < numCourses; i++) {
        cout << "\nCourse " << i + 1 << endl;

        cout << "Course Name: ";
        cin >> courses[i].courseName;

        cout << "Course Code: ";
        cin >> courses[i].courseCode;

        int numStudents;
        cout << "Number of enrolled students: ";
        cin >> numStudents;

        courses[i].enrolledStudents.resize(numStudents);

        for (int j = 0; j < numStudents; j++) {
            cout << "Student " << j + 1 << " Name: ";
            cin >> courses[i].enrolledStudents[j].name;

            cout << "Student ID: ";
            cin >> courses[i].enrolledStudents[j].id;
        }
    }

    cout << "\n--- Course Enrollment List ---\n";
    for (const auto& course : courses) {
        cout << "Course: " << course.courseName
             << " (" << course.courseCode << ")\n";

        for (const auto& student : course.enrolledStudents) {
            cout << "  Name: " << student.name
                 << ", ID: " << student.id << endl;
        }
        cout << endl;
    }

    return 0;
}
